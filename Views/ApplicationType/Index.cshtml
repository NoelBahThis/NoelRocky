<!--View     ApplicationType     Index-->
@model IEnumerable<NoelRocky.Models.ApplicationType>
@{
    ViewData["Title"] = "Application Type";
}

<div class="container p-3">

     <div class="row pt-4">
          <div class="col-6">
               <h2 class="text-primary">Application Type List</h2>
          </div>



          <div class="col-6 text-right">
               <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-outline-primary">
                    <i class="fa-solid fa-plus"></i> &nbsp; Create New Application Type
               </a>
          </div>
     </div>
     <br />

     <div class="text-center">
         @if (Model.Count() > 0)
         {
              <table class="table table-bordered table-striped text-center" style="width:75%;margin-left:auto;margin-right:auto">
                   <thead>
                        <tr>
                             <th>
                                  Application Type Name
                             </th>
                             <th>
                                  Option
                             </th>
                        </tr>
                   </thead>
                   <tbody>
                     @foreach (var obj in Model)
                     {
                            <tr >
                                 <td width="50%">@obj.Name</td>
                                 <td class="text-center" width="50%" role="group">
                                      <div class="w-75 btn-group" role="group">
                                           <a asp-route-Id="@obj.Id" asp-controller="ApplicationType" asp-action="Edit" class="btn btn-primary w-50"><i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit</a>
                                           <a asp-route-Id="@obj.Id" asp-controller="ApplicationType" asp-action="Delete" class="btn btn-danger  w-50"><i class="fa-solid fa-trash"></i> &nbsp; Delete</a>
                                      </div>
                                 </td>
                            </tr>
                     }
                   </tbody>
              </table>
         }
         else
         {
              <h2 class="text-center">No Application Type Exist.😭</h2>
         }
    </div>


</div>


