@model NoelRocky.Models.ApplicationType
@{
    ViewData["Title"] = "Create Application Type";
}

<form method="post" asp-action="Create">
     <div class="border p-3">
          <div class="form-group row">
               <h2 class="text-info p-3">Add Application Type</h2>
          </div>

          <div class="row">
               <div class="col-8">
                    <div class="form-group row">
                         <div class="col-4 text-right">
                              <label asp-for="Name"></label>
                         </div>
                         <div class="col-8">
                              <input asp-for="Name" class="form-control" />
                              <span asp-validation-for="Name" class="text-danger"></span>
                         </div>

                    </div>
                    <div class="form-group row">
                         <div class="col-8 offset-4 row">

                              <div class="col">
                                   <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                              </div>
                              <div class="col">
                                   <input type="submit" class="btn btn-outline-success w-75" value="Create" />
                              </div>
                         </div>
                    </div>
               </div>
               <div class="col-4">
                @* Keep this empty *@
               </div>
          </div>

     </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

