@model NoelRocky.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<form method="post" asp-action="Delete">
     <input asp-for="Id" hidden />
     <div class="border p-3">
          <div class="form-group row">
               <h2 class="text-info p-3">Delete Category</h2>
          </div>

          <div class="row">
               <div class="col-8">
                    <div class="form-group row">
                         <div class="col-4 text-right">
                              <label asp-for="Name"></label>
                         </div>
                         <div class="col-8">
                              <input asp-for="Name" class="form-control" disabled/>
                         </div>

                    </div>
                    <div class="form-group row">
                         <div class="col-4 text-right">
                              <label asp-for="DisplayOrder"></label>
                         </div>
                         <div class="col-8">
                              <input asp-for="DisplayOrder" class="form-control" disabled />
                         </div>

                    </div>
                    <div class="form-group row">
                         <div class="col-8 offset-4 row">

                              <div class="col">
                                   <a asp-controller="Category" asp-action="Index" class="btn btn-info w-75"> 
                                        <i class="fa-solid fa-arrow-rotate-left"></i> &nbsp; Back
                                   </a>
                              </div>
                              <div class="col">
                                   <input type="submit" class="btn btn-outline-danger w-75" value="Delete" />
                              </div>
                         </div>
                    </div>
               </div>
               <div class="col-4">
                @* Keep this empty *@
               </div>
          </div>

     </div>
</form>
