<!--VIEW,Category,Index-->
@model IEnumerable<NoelRocky.Models.Category>

@{
    ViewData["Title"] = "Category";

}

<div class="container p-3">
     
     <div class="row pt-4">
          <div class="col-6">
               <h2 class="text-primary">Category List</h2>
          </div>

          <div class="col-6 text-right">
               <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                    <i class="fa-solid fa-plus"></i> &nbsp; Create New Category
               </a>
          </div>
     </div>
     <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
             <thead>
                  <tr>
                       <th>
                            Category Name
                       </th>
                        <th>
                             Display Order
                        </th>
                  </tr>
             </thead>
             <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                         <td width="50%">@obj.Name</td>
                         <td width="30%">@obj.DisplayOrder</td>
                         <td class="text-center">
                              <div class="w-75 btn-group" role="group">
                                      <a asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Edit" class="btn btn-primary w-50"><i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit</a>
                                      <a asp-route-Id="@obj.Id" asp-controller="Category" asp-action="Delete" class="btn btn-danger  w-50"><i class="fa-solid fa-trash"></i> &nbsp; Delete</a>
                              </div>
                         </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
         <h2 class="text-center">No Category Exist.😭</h2>
    }

     

</div>

